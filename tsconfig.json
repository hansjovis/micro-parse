{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ]
}
