{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2021"],
    "target": "es2021",
    "declaration": true,
    "declarationDir": "./build/types",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ]
}
